[Unit]
Description=mount {{ share_name }} share

[Mount]
What=//{{ file_server }}/{{ share_name }}
Where=/{{ mnt_point }}/{{ share_name }}
Type=cifs
Options=credentials={{ ansible_user_dir }}/.smb,rw,uid=1000,gid=1000,iocharset=utf8,_netdev,noserverino
DirectoryMode=0700

[Install]
WantedBy=multi-user.target
